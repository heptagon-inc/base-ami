{
  "variables": {
    "aws_instance_type": "t2.micro",
    "aws_region": "ap-northeast-1",
    "aws_amazon_linux_release_version": "2017.03",
    "ssh_public_key": "ssh-rsa "
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{user `aws_region`}}",
      "instance_type": "{{user `aws_instance_type`}}",
	  "spot_price": "auto",
	  "spot_price_auto_product": "Linux/UNIX (Amazon VPC)",
      "ssh_username": "ec2-user",
      "ami_name": "Heptagon_Base_AMI_{{user `aws_amazon_linux_release_version`}}_{{timestamp}}",
      "ami_description": "Customized Amazon Linux",
      "associate_public_ip_address": "true",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "amzn-ami*-ebs",
          "root-device-type": "ebs"
        },
        "owners": [
          "137112412989",
          "591542846629",
          "801119661308",
          "102837901569",
          "013907871322",
          "206029621532",
          "286198878708",
          "443319210888"
        ],
        "most_recent": true
      },
      "tags": {
        "Name": "Heptagon_Base_AMI_{{user `aws_amazon_linux_release_version`}}_{{timestamp}}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
	  "user": "ec2-user",
	  "sftp_command" : "/usr/libexec/openssh/sftp-server -e",
      "playbook_file": "playbook-base.yml"
    }
  ]
}
